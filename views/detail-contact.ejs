<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Contact</h2>
            <% if (!contact) { %>
                <div class="alert alert-warning fw-bold" role="alert">
                    Contact is not exist <br>
                    <a href="/contact" class="alert-link fw-normal">&laquo; back to contact list</a>
                </div>
                <% } else { %>
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= contact.name %>
                            </h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                <%= contact.phone %>
                            </h6>
                            <p class="card-text">
                                <%= contact.email %>
                            </p>
                            <a href="/contact/edit/<%= contact._id %>" class="btn btn-warning badge">Edit</a>
                            <form action="/contact?_method=DELETE" method="POST" class="d-inline">
                                <input type="hidden" name="_id" id="_id" value="<%= contact._id %>">
                                <button type="submit" class="btn btn-danger badge"
                                    onclick="return confirm('Are you sure?')">delete</button>
                            </form>
                            <a href="/contact" class="card-link d-block mt-3">&laquo; back to contact list</a>
                        </div>
                    </div>
                    <% } %>
        </div>
    </div>
</div>
</div>