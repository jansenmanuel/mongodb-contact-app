<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Edit Contact</h2>

            <% if (typeof errors !='undefined' ) { %>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% errors.forEach(error=> { %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }) %>
                    </ul>
                </div>
                <% } %>

                    <form method="post" action="/contact?_method=PUT">
                        <input type="hidden" name="_id" id="_id" value="<%= contact._id %>">
                        <input type="hidden" class="form-control" id="oldName" name="oldName"
                            value="<%= contact.name %>" required>
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="name"
                                value="<%= contact.oldName || contact.name %>" placeholder="Input name..." required>
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone Number</label>
                            <input type="text" class="form-control" id="phone" name="phone" value="<%= contact.phone %>"
                                placeholder="Input phone number..." required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email " class="form-control" id="email" name="email"
                                value="<%= contact.email %>" placeholder="Input email..." required>
                        </div>
                        <button type="submit" class="btn btn-warning">Edit Contact</button>
                    </form>
        </div>
    </div>
</div>