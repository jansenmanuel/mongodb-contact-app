<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>Contact List</h2>

            <a href="/contact/add" class="btn btn-success mb-3">Add Contact</a>

            <% if (msg.length !==0) { %>
                <div class="alert alert-success" role="alert">
                    <%= msg %>
                </div>
                <% } %>

                    <table class="table table-striped table-hover">
                        <thead>
                            <% if (contacts.length===0) { %>
                                <div class="alert alert-warning fw-bold" role="alert">Contact is empty</div>
                                </tr>
                                <% } else {%>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Phone Number</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                    <% } %>
                        </thead>
                        <tbody>
                            <% contacts.forEach((contact, idx)=> { %>
                                <tr>
                                    <th scope="row">
                                        <%=idx+1 %>
                                    </th>
                                    <td>
                                        <%= contact.name %>
                                    </td>
                                    <td>
                                        <%= contact.phone %>
                                    </td>
                                    <td>
                                        <a href="/contact/<%= contact._id  %> "
                                            class="btn btn-primary badge rounded-pill">
                                            <i class="bi bi-info-circle"></i> detail
                                        </a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
        </div>
    </div>
</div>